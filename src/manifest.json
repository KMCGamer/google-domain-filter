{
  "manifest_version": 2,
  "name": "Google Search Blacklist",
  "author": "Kyle Carhart",
  "version": "1.0",
  "description": "Filter domains from your Google searches.",
  "homepage_url": "https://github.com/KMCGamer/google-domain-filter",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "*://*.google.com/",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_popup": "./popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/search?*"],
      "js": ["./browser-polyfill.min.js", "./content/index.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["./browser-polyfill.min.js", "./background/index.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gsb@carhart.dev",
      "strict_min_version": "53.0"
    }
  },
  "icons": {
    "16": "./static/logo16.png",
    "48": "./static/logo48.png",
    "128": "./static/logo128.png"
  }
}
